<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="HardcodedText">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:visibility="visible"
        tools:layout_gravity="start"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="86dp"
                android:fontFamily="@font/open_sans"
                android:includeFontPadding="false"
                android:text="@string/app_name"
                android:textColor="@color/windowBackground"
                android:textSize="42sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="86dp"
                android:fontFamily="@font/open_sans"
                android:includeFontPadding="false"
                android:text="Про проект"
                android:textColor="#FFF"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/rada4you_code_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/open_sans"
                android:includeFontPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="rada4you.org/about"
                android:textColor="@color/colorAccent"
                android:textSize="22sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/open_sans"
                android:includeFontPadding="false"
                android:text="Оцінити програму"
                android:textColor="#FFF"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/play_market_code_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/open_sans"
                android:includeFontPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="PlayMarket"
                android:textColor="@color/colorAccent"
                android:textSize="22sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/open_sans"
                android:includeFontPadding="false"
                android:text="Сторінка на Github"
                android:textColor="@android:color/white"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/github_code_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/open_sans"
                android:includeFontPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="ronnich9/ZakonyUA"
                android:textColor="@color/colorAccent"
                android:textSize="22sp" />


        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</merge>