<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/deputat_image"
        android:layout_margin="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="@string/deputat_face_image" />

    <TextView
        android:id="@+id/deputat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/open_sans"
        android:layout_alignTop="@id/deputat_image"
        android:layout_toEndOf="@id/deputat_image"
        tools:text="Дубінський Олександр" />

    <TextView
        android:id="@+id/deputat_electorate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans"
        android:layout_marginStart="10dp"
        android:layout_below="@id/deputat_name"
        android:textSize="12sp"
        android:textColor="@color/material_on_background_disabled"
        android:layout_toEndOf="@id/deputat_image"
        tools:text="м. Київ" />

    <TextView
        android:id="@+id/deputat_vote"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fontFamily="@font/open_sans"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        tools:text="ТАК"
        android:gravity="center"
        android:background="@color/colorAccent"/>

</RelativeLayout>